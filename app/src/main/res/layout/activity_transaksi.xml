<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latarbelakang2"
    android:orientation="vertical"
    tools:context=".TransaksiActivity">

    <RelativeLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/header"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:padding="20dp"
            android:src="@drawable/cathouse_app"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/headerhomeTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logohome"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        >
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="432dp"
            android:layout_height="281dp"
            app:srcCompat="@drawable/logoberhasil"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Selamat transaksi anda berhasil dilakukan.Untuk kelanjutan silahkan lansung datang ke toko kami untuk biaya dan pelayanan.Terimakasih semoga hari anda menyenangkan "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_margin="60dp"
            tools:ignore="DuplicateIds,MissingConstraints" />
    </RelativeLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:background="@color/pink"
        android:layout_marginTop="20dp"
        />

</LinearLayout>